generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String   @unique
  password     String
  role         Role
  regNo        String?  @unique
  phone        String?
  dob          DateTime?
  gender       Gender?

  // Hostel info
  hostelBlock  Block
  roomNumber   String?
  
  // Attendance
  attendance   Attendance[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

enum Role {
  STUDENT
  WORKER
  ADMIN
  SUPERADMIN
}

enum Gender {
  MALE
  FEMALE
}

enum Block {
  B1
  B2
  B3
}

model Attendance {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  status    AttendanceStatus
  checkIn   DateTime
  checkOut  DateTime
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  HALF_PRESENT
}
